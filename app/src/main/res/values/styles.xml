<resources>

    <style name="flip_button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@null</item>
        <item name="android:src">@drawable/ic_list_24dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_base</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.XLarge">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="GoalSlot">
        <item name="android:layout_width">@dimen/goal_slot_width</item>
        <item name="android:layout_height">@dimen/goal_slot_height</item>
        <item name="android:background">@drawable/ic_hex</item>
        <item name="android:backgroundTint">@color/hex_background_default</item>
    </style>

    <style name="GoalSlot.Distance">
        <item name="android:backgroundTint">@color/hex_background_distance</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GoalSlot.Distance.TopTier">
        <item name="android:layout_width">@dimen/goal_slot_width_toptier</item>
        <item name="android:layout_height">@dimen/goal_slot_height_toptier</item>
        <!--<item name="android:paddingTop">4dp</item>-->
    </style>

    <style name="GoalSlot.Days">
        <item name="android:backgroundTint">@color/hex_background_time</item>
    </style>

    <style name="GoalSlot.Days.TopTier">
        <item name="android:layout_width">@dimen/goal_slot_width_toptier</item>
        <item name="android:layout_height">@dimen/goal_slot_height_toptier</item>
        <item name="android:backgroundTint">@color/hex_background_time</item>
    </style>

    <style name="GoalValueLabel">
        <item name="numericTextColor">@android:color/white</item>
        <item name="numericTextSize">@dimen/text_base</item>
        <item name="labelTextColor">@android:color/white</item>
        <item name="labelTextSize">@dimen/text_small</item>
        <item name="labelVisibility">visible</item>
    </style>

    <style name="GoalValueLabel.Large">
        <item name="numericTextSize">@dimen/text_large</item>
    </style>

    <style name="GoalValueLabel.XLarge">
        <item name="numericTextSize">@dimen/text_xlarge</item>
    </style>


</resources>
