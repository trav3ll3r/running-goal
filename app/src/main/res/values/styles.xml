<resources>

    <style name="ActivityDialog" parent="Theme.AppCompat.Dialog">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="flip_button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <!--<item name="android:background">@android:color/holo_blue_dark</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@null</item>
        <item name="android:src">@drawable/ic_list_24dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GoalSlot">
        <item name="android:layout_width">@dimen/goal_slot_width</item>
        <item name="android:layout_height">@dimen/goal_slot_height</item>
        <item name="android:background">@drawable/ic_hex</item>
        <item name="android:backgroundTint">@color/goal_slot_default</item>
    </style>

    <style name="GoalSlot.Distance">
        <item name="android:backgroundTint">@color/goal_slot_distance</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GoalSlot.Distance.TopTier">
        <item name="android:layout_width">@dimen/goal_slot_width_toptier</item>
        <item name="android:layout_height">@dimen/goal_slot_height_toptier</item>
        <!--<item name="android:paddingTop">4dp</item>-->
    </style>

    <style name="GoalSlot.Days">
        <item name="android:backgroundTint">@color/goal_slot_time</item>
    </style>

    <style name="GoalSlot.Days.TopTier">
        <item name="android:layout_width">@dimen/goal_slot_width_toptier</item>
        <item name="android:layout_height">@dimen/goal_slot_height_toptier</item>
        <item name="android:backgroundTint">@color/goal_slot_time</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>
        <item name="itemIconTint">@color/navigation_bar_txt_color</item>
        <item name="itemTextColor">@color/navigation_bar_txt_color</item>
        <item name="paddingStart">@dimen/bottom_navigation_padding</item>
        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>
    </style>

</resources>
